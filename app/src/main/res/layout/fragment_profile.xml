<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:padding="@dimen/padding">

    <!-- TODO: Update blank fragment layout -->
<ImageView
    android:id="@+id/ivShrek"
    android:layout_width="0dp"
    android:layout_height="300dp"
    app:layout_constraintDimensionRatio="1:1"
    android:src="@drawable/shrek"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
<TextView
    android:id="@+id/tvShrek"
    android:text="Shrek"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/ivShrek"
    app:layout_constraintStart_toStartOf="@+id/ivShrek"
    app:layout_constraintEnd_toEndOf="@id/ivShrek"
    android:textSize="30sp"
    android:layout_marginTop="0dp"
    />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age: 18+"
        app:layout_constraintTop_toBottomOf="@+id/tvShrek"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/tvJoined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joined: 4/19/2020"
        app:layout_constraintTop_toBottomOf="@+id/tvAge"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        />
   <TextView
       android:id="@+id/tvEmail"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/tvJoined"
       app:layout_constraintStart_toStartOf="parent"
       android:text="Email: shreklover68@gmail.com"
       android:textSize="20sp"
       />
</androidx.constraintlayout.widget.ConstraintLayout>